/**app.wxss**/
page{
  font-family: "Microsoft YaHei";
  background-color: #fff;
  display: flex;
  /*纵向排列*/
  flex-direction: column
}
.page-head{
  display: flex;
  background: #000;
  /*横向居中对齐*/
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 5rpx;
}
.page-head .page-head-text{
  padding: 20rpx 0;
  color: #fff;
  font-size:30rpx;
}
.page-body{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.item{
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx;
}
.item .poster{
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.item .meta{
  flex: 1
}
.item .title,.item .sub-title{
  display: block;
  margin-bottom: 8rpx;
}
.item .title{
  font-size: 32rpx;
}
.item .sub-title{
  font-size: 22rpx;
  color: #c0c0c0;
  margin-top: 7rpx;
}
.item .artists{
  font-size: 26rpx;
  color: #999;
}
.item .rating{
  font-size: 28rpx;
  font-weight: bold;
  color: red;
}